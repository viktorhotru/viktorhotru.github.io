extends layout/page

mixin format_desktop(formatData)
    section(class='pr-20 format-box' style='padding-bottom: 70px; padding-top: 70px;' id= formatData.name)
        .row.align-items-center.justify-content-center
            .col-10
                h3.mb-30.color-black.format-name-up= formatData.title
            .col-12.col-md-6.mb-35
                .banner-container.ml-15
                    img(src='i/templates/mac.png', alt='', width='100%')
                    .video-container
                        video.video(autoplay='autoplay', poster='i/video_covers/' + formatData.name + '_desktop.png', playsinline='', muted='', loop='')
                            source(src='video/' + formatData.name + '_desktop.mp4')
                .visual-phone
                    .banner-container-phone
                        img(src='i/templates/phone.png', alt='', width='100%')
                        .video-container-phone
                            video.video-phone(autoplay='autoplay', poster='i/video_covers/' + formatData.name + '_mobile.png', playsinline='', muted='', loop='')
                                source(src='video/' + formatData.name + '_mobile.mp4')
            .col-10.col-md-5
                h3.mb-30.color-black.format-name-down= formatData.title
                p.color-black.mb-30.f-18= formatData.description
                .row.d-flex.align-items-start.color-black
                    .col-md-12.col-xl-6
                        .row.mt-20.ml-0
                            .icon-credit-card.col-2.col-sm-1.col-lg-2.px-0
                            .col-9
                                h5 Модель оплаты
                                p.f-18= formatData.payment
                            .col-1
                        .row.mt-20.ml-0
                            .icon-sizes.col-2.col-sm-1.col-lg-2.px-0
                            .col-9
                                h5 Размер
                                p.f-18= formatData.sizes
                            .col-1
                    .col-md-12.col-xl-6
                        .row.mt-20.ml-0
                            .icon-stopwatch.col-2.col-sm-1.col-lg-2.px-0
                            .col-9
                                h5 Хронометраж
                                p.f-18= formatData.time
                            .col-1

mixin format_mobile(formatData)
    section(class='pr-20 format-box' id= formatData.name)
        .row.pt-30.align-items-center.justify-content-center
            .col-10
                h3.mb-30.color-black.format-name-up= formatData.title
            .col-12.col-md-6.d-flex.justify-content-center.mb-35
                if (formatData.video)
                    .mobile-banner-container-phone
                        img(src='i/templates/mobile_formats.png', alt='', width='100%')
                        .video-mobile-banner-container-phone
                            video.video-mobban-phone(autoplay='autoplay', poster='i/video_covers/' + formatData.name + '.png', playsinline='', muted='', loop='')
                                source(src='video/' + formatData.name + '.mp4')
                else
                    .mobile-banner-container-phone
                        img(src='i/templates/native.png', alt='', width='100%')
            .col-10.col-md-5.mb-35
                h3.mb-30.color-black.format-name-mobile-down= formatData.title
                p.color-black.mb-30.f-18= formatData.description
                .row.d-flex.color-black
                    .col-md-12.col-xl-6
                        .row.mt-20.ml-0
                            .icon-credit-card.col-2.col-sm-1.col-lg-2.px-0
                            .col-9
                                h5 Модель оплаты
                                p.f-18= formatData.payment
                            .col-1
                    .col-md-12.col-xl-6
                        .row.mt-20.ml-0
                            .icon-sizes.col-2.col-sm-1.col-lg-2.px-0
                            .col-9
                                h5 Размер
                                p.f-18= formatData.sizes

