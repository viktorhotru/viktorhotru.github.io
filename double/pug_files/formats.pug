block content
    section.formats-container.pb-50
        for i in aboutFormats
            if (i.type === "desktop")
                +format_desktop(i)
            else
                +format_mobile(i)
    script.
        const navbar = document.querySelector('.navbar-formats');
        const scrollspy = new VanillaScrollspy(navbar);
        scrollspy.init();
